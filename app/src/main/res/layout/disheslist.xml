<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtDish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:text="Dish"
        android:textStyle="italic"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="60px" />

    <TextView
        android:id="@+id/txtDishPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDish"
        android:layout_marginLeft="5dp"
        android:text="Price"
        android:textAlignment="gravity"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:textSize="50px" />

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:text="Add To Cart"
        android:textStyle="bold|italic" />

    <Spinner
        android:id="@+id/spQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnAddToCart"
        android:layout_alignStart="@+id/btnAddToCart"
        android:layout_below="@+id/btnAddToCart"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:entries="@array/numbers"
        android:prompt="@string/quantity_prompt" />


</RelativeLayout>
